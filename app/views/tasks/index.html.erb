<h1>タスク一覧</h1>
<div class="notice"><%= flash[:notice] %></div>
<table>
  <thead>
    <tr>
      <th>タスク名</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task_path(task), data: { turbo_method: :delete } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'タスクを新規作成', new_task_path %>
